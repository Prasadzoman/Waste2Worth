<% layout("/layouts/boilerplate") %>

<div class="filters-container d-flex justify-content-between align-items-center flex-wrap p-3 border rounded bg-light">
    
    <!-- Category Filter -->
    <form action="/listings/filter" method="get" class="d-flex align-items-center">
        <label for="job" class="me-2">Category:</label>
        <select id="job" name="category" class="form-select me-3">
            <option value="">Select a category</option>
            <option value="Chemical">Chemical</option>
            <option value="Food">Food</option>
            <option value="Metal">Metal</option>
            <option value="Construction">Construction</option>
            <option value="Other">Other</option>
        </select>
        <input type="submit" value="Filter" class="btn btn-primary">
    </form>

    <!-- Search Filters -->
    <form action="/listings/search" method="GET" class="d-flex align-items-center">
        <label for="name" class="me-2">Name:</label>
        <input type="text" id="name" name="name" placeholder="Listing name" class="form-control me-3">
        
        <label for="location" class="me-2">Location:</label>
        <input type="text" id="location" name="location" placeholder="Location" class="form-control me-3">
        
        <input type="submit" value="Search" class="btn btn-success">
    </form>
</div>

<div class="container mt-4">
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
        <% for (let i of listings) { %>
            <div class="col">
                <a href="/listings/<%= i.id %>" class="listing-link text-decoration-none">
                    <div class="card h-100 shadow-sm border-0">
                        <img src="<%= i.image %>" class="card-img-top" alt="Listing Image" style="height: 20rem; object-fit: cover;">
                        <div class="card-body">
                            <p class="card-text text-dark">
                                <b><%= i.title %></b><br>
                                &#8377;<%= i.price.toLocaleString("en-IN") %>
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        <% } %>
    </div>
</div>
